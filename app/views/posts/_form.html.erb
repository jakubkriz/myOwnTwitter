<%= form_for @post, :html => { :class => "form-horizontal post" } do |f| %>
  <div class="control-group">
    <%= f.label :author, class:  'control-label' %>
    <div class="controls">
      <%= f.text_field :author, class:  'form-control' %>
    </div>
    <%= error_span(@post[:author]) %>
  </div>
  <div class="control-group">
    <%= f.label :title, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, class:  'form-control' %>
    </div>
    <%= error_span(@post[:title]) %>
  </div>
  <div class="control-group">
    <%= f.label :body, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :body, class: 'form-control' %>
    </div>
    <%= error_span(@post[:body]) %>
  </div>
   <div class="control-group">
    <%= f.label :tags_string, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :tags_string, class:  'form-control' %>
    </div>
    <%= error_span(@post[:tags_string]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            posts_path, :class => 'btn btn-default' %>

<% end %>
