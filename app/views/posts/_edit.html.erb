<div class="text-center"><h4>Edit Post</h4></div>
<div class="row text-center">
  <%= form_for :post, url: edit_post_path(@post), method: :patch do |f| %>
    <div class="large-10 large-centered columns">
      <%= f.text_field :author, placeholder: "Author" %>
    </div>
    <div class="large-10 large-centered columns">
      <%= f.text_field :title, placeholder: "Title", rows: 5 %>
    </div>
    <div class="large-10 large-centered columns">
      <%= f.text_area :body, placeholder: "Your post", rows: 5 %>
    </div>
    <div class="large-10 large-centered columns">
      <%= f.text_field :all_tags, placeholder: "Tags separated with comma" %>
    </div>
    <div class="large-10 large-centered columns">
      <%= f.submit "Edit it!", class: "button"%>
    </div>
  <% end %>
</div>
