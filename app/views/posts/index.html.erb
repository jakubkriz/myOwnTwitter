<%- model_class = Post -%>
<div class="page-header">
  <h1>
  <%= link_to t('.title', :default => model_class.model_name.human.pluralize.titleize), root_path %>
  </h1>
</div>

<h4 class="text-center">Filter by tag</h4>
<div class="row">
  <div class="col-xs-12 text-center">
    <% @tags.each do |tag| %>
      <%= link_to tag.name, filter_posts_path(tag.name), class: 'filter-by-tag' %>
    <% end %>
  </div>
</div>

<%= link_to t('.new', :default => t("New Post")),
            new_post_path,
            :class => 'btn btn-primary' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:author) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:body) %></th>
      <th><%= model_class.human_attribute_name(:tags_string) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.author %></td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.tags_string %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_post_path(post), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      post_path(post),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

